{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "desktop",
  "version": "0.1.0",
  "identifier": "com.regenta.staffwatch",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "StaffWatch",
        "width": 800,
        "height": 600,
        "url": "/"
      },
      {
        "label": "idle",
        "title": "Idle Detection",
        "width": 500,
        "height": 400,
        "url": "/idle",
        "visible": false,
        "center": true,
        "resizable": false
      },
      {
        "label": "quit",
        "title": "Pending Uploads",
        "width": 400,
        "height": 300,
        "url": "/quit",
        "visible": false,
        "center": true,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "icons/*"
    ]
  }
}